# Tokamak ZKP Channel Manager - Environment Variables
# Copy this file to .env.local and update the values

# ============================================================================
# DKG Server Configuration
# ============================================================================

# DKG Coordinator (fserver) WebSocket URL
# Default: ws://127.0.0.1:9000/ws (local development)
# Production: wss://your-dkg-server.com/ws
NEXT_PUBLIC_DKG_SERVER_URL=ws://127.0.0.1:9000/ws

# Auto-connect to DKG server on page load (true/false)
NEXT_PUBLIC_DKG_AUTO_CONNECT=false

# DKG server connection timeout (milliseconds)
NEXT_PUBLIC_DKG_CONNECTION_TIMEOUT=5000

# ============================================================================
# Blockchain Configuration
# ============================================================================

# Default network for channel operations
# Options: sepolia, mainnet, localhost
NEXT_PUBLIC_DEFAULT_NETWORK=sepolia

# Alchemy API Key for blockchain RPC
NEXT_PUBLIC_ALCHEMY_API_KEY=your_alchemy_api_key_here

# ============================================================================
# Firebase Configuration
# ============================================================================

# Firebase API Key
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here

# Firebase Auth Domain
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com

# Firebase Realtime Database URL
NEXT_PUBLIC_FIREBASE_DATABASE_URL=https://your-project-id-default-rtdb.firebaseio.com

# Firebase Project ID
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id

# Firebase Storage Bucket
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.firebasestorage.app

# Firebase Messaging Sender ID
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id

# Firebase App ID
NEXT_PUBLIC_FIREBASE_APP_ID=1:your_sender_id:web:your_app_id

# Firebase Measurement ID (for Analytics)
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-YOUR_MEASUREMENT_ID

# Note: Get Firebase values from Firebase Console → Project Settings → Your apps → SDK setup and configuration
# Make sure to enable Realtime Database in your Firebase Console!

# ============================================================================
# Application Settings
# ============================================================================

# Enable debug mode (shows console logs)
NEXT_PUBLIC_DEBUG_MODE=false

# Auto-refresh session list interval (milliseconds)
NEXT_PUBLIC_SESSION_REFRESH_INTERVAL=10000

# ============================================================================
# Development Settings
# ============================================================================

# Enable development mode (shows auto-fill test data buttons)
NEXT_PUBLIC_DEV_MODE=true

# Show development console settings
NEXT_PUBLIC_SHOW_DEV_CONSOLE=true

# ============================================================================
# Notes
# ============================================================================
# 
# Copy this file to .env.local:
# cp env.example .env.local
#
# After updating .env.local, restart your development server:
# npm run dev

